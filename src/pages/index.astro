---
import { IMAGES } from '../config';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
		<title>Liam Gallagher</title>
	</head>
	<body>
		<header>
			<h1>Liam Gallagher</h1>
		</header>

		<main id="images">
			{
				IMAGES.map((image, index) => (
					<div class="gallery-item" id={image.name + index} style={"grid-column: span " + image.width + "; grid-row: span " + image.height + ";"} >
						<img src={"images/" + image.src} alt={image.name} />
					</div>
				))
			}
		</main>
	</body>
</html>

<style>
	:root {
		scroll-behavior: smooth;
		font-family: 'Poppins', sans-serif;
	}

	body {
		background-color: #fcfbfe;
		padding-top: 8rem;
		padding-bottom: 12rem;
		max-width: min(1080px, 90vw);
		margin: auto;
	}

	main {
		display: grid;
		grid-template-columns: repeat(6,1fr);
		grid-auto-rows: 100px;
		grid-gap: 20px;
		grid-auto-flow: dense;
	}

	.gallery-item {
		width: 100%;
		height: 100%;
		position: relative;
		overflow: hidden;
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: 50% 50%;
		cursor: pointer;
		transition: .5s ease-in-out;
	}

	.gallery-item img:hover {
		transform: scale(105%);
	}

	@media screen and (max-width: 1200px) {
		main {
			grid-template-columns: repeat(2, 1fr);
		}
		.gallery-item {
			grid-column: span 1 !important;
		}
	}

	@media screen and (max-width: 600px) {
		main {
			grid-template-columns: repeat(1,1fr);
			grid-auto-rows: auto;
		}
		.gallery-item {
			grid-column: span 1 !important;
		}
	}
</style>
